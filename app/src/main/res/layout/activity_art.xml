<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_animal_scene">

    <TextView
        android:id="@+id/under_card"
        android:layout_width="328dp"
        android:layout_height="400dp"
        android:background="#FB543F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinosaur"
        android:textSize="64sp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/under_card"
        app:layout_constraintTop_toTopOf="@id/under_card"
        app:layout_constraintEnd_toEndOf="@id/under_card" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_dinosaur"
        android:padding="40dp"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/under_card"
        app:layout_constraintTop_toTopOf="@id/under_card"
        app:layout_constraintEnd_toEndOf="@id/under_card" />

    <Button
        android:id="@+id/favorite"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@android:drawable/btn_star"
        app:layout_constraintStart_toEndOf="@+id/under_card"
        app:layout_constraintBottom_toBottomOf="@id/under_card"
        app:layout_constraintEnd_toEndOf="@id/under_card" />

    <ImageView
        android:id="@+id/dino1"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/dino1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.motion.widget.MotionLayout>